
<%-include("header")-%>

    <div class="box header">
        <h1><%=listTitle%></h1>
    </div>

    <div class="box box1">
       


        <%    newListItems.forEach(function(item) { %>
            <form method="post" action="/delete">
                <div class="items">
                    <input type="checkbox" name="check" value="<%=item._id%>" onchange="this.form.submit()">
                    <input type="hidden" name="listName" value="<%=listTitle%>" ></input>
                  <p><%=item.name%></p>
                    </div>
            </form>
            
            <%  });%>

        <form class="" action="/" method="post">

            <input type="text"  class="add-food" name="addList" placeholder="Enter your Favourite Food" autocomplete="off" required>
            <button class="btn" name="list" type="submit" value="<%=listTitle%>">+</button>
    
        </form>
    </div>


<%-include("footer") -%>
